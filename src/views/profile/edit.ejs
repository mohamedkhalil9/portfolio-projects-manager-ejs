<!-- Background elements -->
<div class="absolute inset-0 overflow-hidden z-0">
  <div
    class="absolute top-1/4 left-1/4 w-64 h-64 bg-indigo-900 rounded-full mix-blend-soft-light filter blur-3xl opacity-30 animate-float">
  </div>
  <div
    class="absolute top-1/3 right-1/4 w-72 h-72 bg-purple-900 rounded-full mix-blend-soft-light filter blur-3xl opacity-20 animate-float animation-delay-2000">
  </div>
  <div
    class="absolute bottom-1/4 left-1/3 w-56 h-56 bg-blue-900 rounded-full mix-blend-soft-light filter blur-3xl opacity-25 animate-float animation-delay-3000">
  </div>
</div>

<!-- Main container -->
<div class="container mx-auto px-4 py-12 max-w-4xl relative z-10">
  <!-- Back button -->
  <a href="/api/v1/profile" class="inline-flex items-center text-indigo-400 hover:text-indigo-300 mb-6 transition">
    <i class="fas fa-arrow-left mr-2"></i> Back to Profile
  </a>

  <!-- Profile card -->
  <div class="form-container rounded-2xl p-8 animate-fade-in">
    <div class="flex flex-col md:flex-row items-center mb-8">
      <!-- Avatar upload -->
      <div class="relative group mr-8 mb-6 md:mb-0">
        <div
          class="w-32 h-32 rounded-full bg-gradient-to-br from-indigo-900 to-purple-900 flex items-center justify-center overflow-hidden border-2 border-white/10 glow">
          <% if (user.profileImg) { %>
            <img src="<%= user.profileImg %>" alt="Profile" class="w-full h-full object-cover" />
            <% } else { %>
              <i class="fas fa-user text-5xl text-white opacity-90"></i>
              <% } %>
        </div>
        <label for="avatar-upload"
          class="absolute inset-0 bg-black/50 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity cursor-pointer rounded-full">
          <i class="fas fa-camera text-white text-2xl"></i>
          <input type="file" id="avatar-upload" name="avatar" accept="image/*" class="hidden" />
        </label>
      </div>

      <div class="text-center md:text-left">
        <h1 class="text-3xl font-light text-white mb-2">Edit Profile</h1>
        <p class="text-gray-400 font-light">Update your personal information</p>
      </div>
    </div>

    <% if (typeof error !=='undefined' ) { %>
      <div class="bg-red-900/50 border border-red-700 text-red-200 px-4 py-3 rounded mb-6 animate-fade-in">
        <%= error %>
      </div>
      <% } %>
        <% if (typeof success !=='undefined' ) { %>
          <div class="bg-green-900/50 border border-green-700 text-green-200 px-4 py-3 rounded mb-6 animate-fade-in">
            <%= success %>
          </div>
          <% } %>

            <form method="POST" action="/profile/edit" enctype="multipart/form-data" class="space-y-6">

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- First Name -->
                <div class="animate-slide-up animation-delay-150">
                  <label class="block text-gray-400 text-sm font-light mb-2">First Name</label>
                  <input type="text" name="firstName" value="<%= user.firstName %>" required
                    class="input-field w-full px-4 py-3 rounded-xl text-white border border-gray-800 focus:outline-none focus:ring-1 focus:ring-indigo-500/50" />
                </div>

                <!-- Last Name -->
                <div class="animate-slide-up animation-delay-200">
                  <label class="block text-gray-400 text-sm font-light mb-2">Last Name</label>
                  <input type="text" name="lastName" value="<%= user.lastName %>" required
                    class="input-field w-full px-4 py-3 rounded-xl text-white border border-gray-800 focus:outline-none focus:ring-1 focus:ring-indigo-500/50" />
                </div>

                <!-- Email -->
                <div class="animate-slide-up animation-delay-250 md:col-span-2">
                  <label class="block text-gray-400 text-sm font-light mb-2">Email</label>
                  <div class="relative">
                    <i class="fas fa-envelope absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-500"></i>
                    <input type="email" name="email" value="<%= user.email %>" required
                      class="input-field w-full pl-12 pr-4 py-3 rounded-xl text-white border border-gray-800 focus:outline-none focus:ring-1 focus:ring-indigo-500/50" />
                  </div>
                </div>

                <!-- Bio -->
                <div class="animate-slide-up animation-delay-300 md:col-span-2">
                  <label class="block text-gray-400 text-sm font-light mb-2">Bio</label>
                  <textarea name="bio" rows="3"
                    class="input-field w-full px-4 py-3 rounded-xl text-white border border-gray-800 focus:outline-none focus:ring-1 focus:ring-indigo-500/50">
                    <%= user.bio || '' %>
                  </textarea>
                </div>

                <!-- Location -->
                <div class="animate-slide-up animation-delay-350">
                  <label class="block text-gray-400 text-sm font-light mb-2">Location</label>
                  <div class="relative">
                    <i
                      class="fas fa-map-marker-alt absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-500"></i>
                    <input type="text" name="location" value="<%= user.location || '' %>"
                      class="input-field w-full pl-12 pr-4 py-3 rounded-xl text-white border border-gray-800 focus:outline-none focus:ring-1 focus:ring-indigo-500/50" />
                  </div>
                </div>

                <!-- Website -->
                <div class="animate-slide-up animation-delay-400">
                  <label class="block text-gray-400 text-sm font-light mb-2">Website</label>
                  <div class="relative">
                    <i class="fas fa-link absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-500"></i>
                    <input type="url" name="website" value="<%= user.website || '' %>"
                      class="input-field w-full pl-12 pr-4 py-3 rounded-xl text-white border border-gray-800 focus:outline-none focus:ring-1 focus:ring-indigo-500/50" />
                  </div>
                </div>
              </div>

              <!-- Password section -->
              <div class="pt-6 mt-6 border-t border-gray-800 animate-slide-up animation-delay-450">
                <h3 class="text-xl font-light text-white mb-4">Change Password</h3>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <!-- Current Password -->
                  <div>
                    <label class="block text-gray-400 text-sm font-light mb-2">Current Password</label>
                    <div class="relative">
                      <i class="fas fa-lock absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-500"></i>
                      <input type="password" name="currentPassword"
                        class="input-field w-full pl-12 pr-4 py-3 rounded-xl text-white border border-gray-800 focus:outline-none focus:ring-1 focus:ring-indigo-500/50" />
                    </div>
                  </div>

                  <!-- New Password -->
                  <div>
                    <label class="block text-gray-400 text-sm font-light mb-2">New Password</label>
                    <div class="relative">
                      <i class="fas fa-lock absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-500"></i>
                      <input type="password" name="newPassword"
                        class="input-field w-full pl-12 pr-4 py-3 rounded-xl text-white border border-gray-800 focus:outline-none focus:ring-1 focus:ring-indigo-500/50" />
                    </div>
                  </div>
                </div>
              </div>

              <!-- Submit button -->
              <div class="flex justify-end pt-6 animate-slide-up animation-delay-500">
                <button type="submit" class="login-btn px-8 py-3 rounded-xl text-white font-medium text-lg">
                  Save Changes
                </button>
              </div>
            </form>
  </div>
</div>

<script>
  // Preview avatar before upload
  document
    .getElementById("avatar-upload")
    .addEventListener("change", function (e) {
      const file = e.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function (event) {
          const avatarContainer = document.querySelector(
            ".group .rounded-full",
          );
          avatarContainer.innerHTML = `<img src="${event.target.result}" alt="Preview" class="w-full h-full object-cover">`;
        };
        reader.readAsDataURL(file);
      }
    });
</script>
