  <!-- Main Content -->
  <main class="relative z-10 max-w-6xl mx-auto px-6 pb-12">
    <!-- Welcome Section -->
    <div class="mb-8 animate-slide-up">
      <h2 class="text-4xl font-light text-white mb-2">
        Welcome back, <span class="text-indigo-400"><%= user.firstName %></span>
      </h2>
      <p class="text-gray-400">Here's what's happening with your account today.</p>
    </div>

    <!-- Profile Cards Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
      <!-- Profile Information Card -->
      <div class="lg:col-span-2 form-container rounded-2xl p-6 animate-slide-up animation-delay-150">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-xl font-light text-white flex items-center">
            <i class="fas fa-user-circle mr-3 text-indigo-400"></i>
            Profile Information
          </h3>
          <a href="/api/v1/profile/edit" class="text-indigo-400 hover:text-indigo-300 transition text-sm">
            <i class="fas fa-edit mr-1"></i>
            Edit
          </a>
        </div>

        <div class="space-y-4">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="p-4 bg-gray-800/30 rounded-xl border border-gray-700/50">
              <label class="block text-gray-400 text-sm mb-1">First Name</label>
              <p class="text-white font-medium"><%= user.firstName %></p>
            </div>
            <div class="p-4 bg-gray-800/30 rounded-xl border border-gray-700/50">
              <label class="block text-gray-400 text-sm mb-1">Last Name</label>
              <p class="text-white font-medium"><%= user.lastName %></p>
            </div>
          </div>
          
          <div class="p-4 bg-gray-800/30 rounded-xl border border-gray-700/50">
            <label class="block text-gray-400 text-sm mb-1">Email Address</label>
            <div class="flex items-center justify-between">
              <p class="text-white font-medium"><%= user.email %></p>
              <% if (user.verified) { %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-green-900/30 text-green-400 border border-green-800">
                  <i class="fas fa-check-circle mr-1"></i>
                  Verified
                </span>
              <% } else { %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-yellow-900/30 text-yellow-400 border border-yellow-800">
                  <i class="fas fa-exclamation-triangle mr-1"></i>
                  Unverified
                </span>
              <% } %>
            </div>
          </div>

          <% if (user.gender) { %>
          <div class="p-4 bg-gray-800/30 rounded-xl border border-gray-700/50">
            <label class="block text-gray-400 text-sm mb-1">Gender</label>
            <p class="text-white font-medium capitalize"><%= user.gender %></p>
          </div>
          <% } %>

          <% if (user.dateOfBirth) { %>
          <div class="p-4 bg-gray-800/30 rounded-xl border border-gray-700/50">
            <label class="block text-gray-400 text-sm mb-1">Date of Birth</label>
            <p class="text-white font-medium"><%= new Date(user.dateOfBirth).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></p>
          </div>
          <% } %>
        </div>
      </div>

      <!-- Quick Stats Card -->
      <div class="space-y-6">
        <!-- Account Status -->
        <div class="form-container rounded-2xl p-6 animate-slide-up animation-delay-300">
          <h3 class="text-lg font-light text-white mb-4 flex items-center">
            <i class="fas fa-shield-alt mr-3 text-green-400"></i>
            Account Status
          </h3>
          
          <div class="space-y-3">
            <div class="flex items-center justify-between">
              <span class="text-gray-400 text-sm">Account Active</span>
              <span class="text-green-400">
                <i class="fas fa-check-circle"></i>
              </span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-gray-400 text-sm">Two-Factor Auth</span>
              <span class="text-yellow-400">
                <i class="fas fa-exclamation-triangle"></i>
              </span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-gray-400 text-sm">Last Login</span>
              <span class="text-gray-300 text-sm">
                <%= user.lastLogin ? new Date(user.lastLogin).toLocaleDateString() : 'Never' %>
