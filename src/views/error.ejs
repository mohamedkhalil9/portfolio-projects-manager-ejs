<!-- Background elements -->
<div class="absolute inset-0 overflow-hidden z-0">
  <div
    class="absolute top-1/4 left-1/4 w-96 h-96 bg-red-900 rounded-full mix-blend-soft-light filter blur-3xl opacity-20 animate-float">
  </div>
  <div
    class="absolute top-1/3 right-1/4 w-80 h-80 bg-purple-900 rounded-full mix-blend-soft-light filter blur-3xl opacity-15 animate-float animation-delay-2000">
  </div>
  <div
    class="absolute bottom-1/4 left-1/3 w-72 h-72 bg-blue-900 rounded-full mix-blend-soft-light filter blur-3xl opacity-20 animate-float animation-delay-3000">
  </div>
</div>

<!-- Main content -->
<div class="text-center z-10 max-w-2xl w-full animate-fade-in">
  <div class="form-container rounded-2xl p-8">
    <div
      class="w-24 h-24 rounded-full bg-gradient-to-br from-red-900 to-pink-900 flex items-center justify-center mx-auto mb-6 glow">
      <i class="fas fa-bug text-3xl text-white opacity-90"></i>
    </div>
    <h1 class="text-4xl font-light text-white mb-4">Something Went Wrong</h1>
    <h2 class="text-2xl font-light text-gray-300 mb-6">
      Error: <%= error.statusCode || 500 %>
    </h2>

    <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-4 mb-6">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <i class="fas fa-exclamation-circle text-red-400 mt-1 mr-3"></i>
        </div>
        <div>
          <h3 class="text-white font-medium mb-2">
            <%= error.message %>
          </h3>
          <!-- <% if (error.stack && 'development' ) { %> -->
          <!-- <pre class="text-gray-400 text-sm whitespace-pre-wrap overflow-x-auto"> -->
          <!-- <%= error.stack %> -->
          <!-- </pre> -->
          <!-- <% } %> -->
        </div>
      </div>
    </div>

    <div class="flex flex-col sm:flex-row justify-center gap-4">
      <a href="/api/v1/profile"
        class="login-btn px-6 py-3 rounded-xl text-white font-medium text-center hover:bg-indigo-700 transition-colors">
        <i class="fas fa-home mr-2"></i> Go Home
      </a>
      <a href="#" onclick="window.history.back()"
        class="px-6 py-3 rounded-xl border border-gray-700 text-gray-400 hover:text-white hover:border-gray-600 transition text-center">
        <i class="fas fa-arrow-left mr-2"></i> Go Back
      </a>
      <!-- <% if ('development' ) { %> -->
      <!-- <button onclick="location.reload()" -->
      <!-- class="px-6 py-3 rounded-xl border border-gray-700 text-gray-400 hover:text-white hover:border-gray-600 transition text-center"> -->
      <!-- <i class="fas fa-sync-alt mr-2"></i> Reload -->
      <!-- </button> -->
      <!-- <% } %> -->
    </div>
  </div>

  <!-- Additional help -->
  <div class="mt-8 text-gray-500 text-sm animate-slide-up animation-delay-300">
    <p>
      If the problem persists, please
      <a href="/contact" class="text-indigo-400 hover:text-indigo-300 transition">contact support</a>
    </p>
    <!-- <% if ('development' ) { %> -->
    <!-- <p class="mt-2 text-gray-600">Development Mode: Showing error details</p> -->
    <!-- <% } %> -->
  </div>
</div>

<script>
  // Add hover effect to buttons
  const buttons = document.querySelectorAll("a, button");
  buttons.forEach((button) => {
    button.addEventListener("mouseenter", () => {
      button.style.transform = "translateY(-2px)";
    });
    button.addEventListener("mouseleave", () => {
      button.style.transform = "translateY(0)";
    });
  });
</script>
