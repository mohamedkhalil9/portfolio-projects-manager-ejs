<!-- Form container -->
<div class="form-container rounded-2xl w-full max-w-md z-10 p-8 animate-fade-in">
  <div class="text-center mb-8 animate-slide-up">
    <div
      class="w-20 h-20 rounded-full bg-gradient-to-br from-indigo-900 to-purple-900 flex items-center justify-center mx-auto mb-6 glow">
      <i class="fas fa-key text-3xl text-white opacity-90"></i>
    </div>
    <h1 class="text-3xl font-light text-white mb-2">Forgot Password</h1>
    <p class="text-gray-400 font-light">
      Enter your email to reset your password
    </p>
  </div>

  <% if (typeof error !=='undefined' && error) { %>
    <div class="bg-red-900/20 border border-red-800 text-red-400 p-4 rounded-xl mb-6 animate-slide-up">
      <i class="fas fa-exclamation-triangle mr-2"></i>
      <%= error %>
    </div>
    <% } %>
      <% if (typeof success !=='undefined' && success) { %>
        <div class="bg-green-900/20 border border-green-800 text-green-400 p-4 rounded-xl mb-6 animate-slide-up">
          <i class="fas fa-check-circle mr-2"></i>
          <%= success %>
        </div>
        <% } %>

          <form action="/api/v1/auth/forgot-password" method="POST" class="space-y-6">
            <!-- Email -->
            <div class="animate-slide-up animation-delay-150">
              <label class="block text-gray-400 text-sm font-light mb-2">Email Address</label>
              <div class="relative">
                <i class="fas fa-envelope absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-500"></i>
                <input type="email" name="email"
                  class="input-field w-full pl-12 pr-4 py-3 rounded-xl text-white border border-gray-800 focus:outline-none focus:ring-1 focus:ring-indigo-500/50"
                  placeholder="your@email.com" value="<%= typeof email !== 'undefined' ? email : '' %>" required />
              </div>
              <p class="text-gray-500 text-xs mt-2">
                We'll send a verification code to this email
              </p>
            </div>

            <button type="submit"
              class="login-btn w-full py-3 rounded-xl text-white font-medium text-lg animate-slide-up animation-delay-300">
              <i class="fas fa-paper-plane mr-2"></i>
              Send Reset Code
            </button>

            <div class="text-center space-y-2 animate-slide-up animation-delay-450">
              <p class="text-gray-500 text-sm">
                Remember your password?
                <a href="/api/v1/auth/login" class="text-indigo-400 hover:text-indigo-300 transition">Sign in</a>
              </p>
              <p class="text-gray-500 text-sm">
                Don't have an account?
                <a href="/api/v1/auth/register" class="text-indigo-400 hover:text-indigo-300 transition">Create one</a>
              </p>
            </div>
          </form>
</div>
