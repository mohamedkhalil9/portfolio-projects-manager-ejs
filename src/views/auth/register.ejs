<!-- Form container -->
<div
  class="form-container rounded-2xl w-full max-w-md z-10 p-8 animate-fade-in"
>
  <div class="text-center mb-8 animate-slide-up">
    <div
      class="w-20 h-20 rounded-full bg-gradient-to-br from-indigo-900 to-purple-900 flex items-center justify-center mx-auto mb-6 glow"
    >
      <i class="fas fa-user-plus text-3xl text-white opacity-90"></i>
    </div>
    <h1 class="text-3xl font-light text-white mb-2">Create Account</h1>
    <p class="text-gray-400 font-light">Join us today</p>
  </div>

  <!-- <form method="POST" action="/api/v1/auth/register" class="space-y-6"> -->
  <form method="POST" action="/api/v1/auth/register" class="space-y-6">
    <!-- Name Row -->
    <div class="grid grid-cols-2 gap-4 animate-slide-up animation-delay-150">
      <div>
        <label class="block text-gray-400 text-sm font-light mb-2"
          >First Name</label
        >
        <div class="relative">
          <i
            class="fas fa-user absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-500"
          ></i>
          <input
            type="text"
            name="firstName"
            class="input-field w-full pl-12 pr-4 py-3 rounded-xl text-white border border-gray-800 focus:outline-none focus:ring-1 focus:ring-indigo-500/50"
            placeholder="John"
          />
        </div>
      </div>
      <div>
        <label class="block text-gray-400 text-sm font-light mb-2"
          >Last Name</label
        >
        <div class="relative">
          <i
            class="fas fa-user absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-500"
          ></i>
          <input
            type="text"
            name="lastName"
            class="input-field w-full pl-12 pr-4 py-3 rounded-xl text-white border border-gray-800 focus:outline-none focus:ring-1 focus:ring-indigo-500/50"
            placeholder="Doe"
          />
        </div>
      </div>
    </div>

    <!-- Email -->
    <div class="animate-slide-up animation-delay-300">
      <label class="block text-gray-400 text-sm font-light mb-2">Email</label>
      <div class="relative">
        <i
          class="fas fa-envelope absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-500"
        ></i>
        <input
          type="email"
          name="email"
          class="input-field w-full pl-12 pr-4 py-3 rounded-xl text-white border border-gray-800 focus:outline-none focus:ring-1 focus:ring-indigo-500/50"
          placeholder="your@email.com"
        />
      </div>
    </div>

    <!-- Password -->
    <div class="animate-slide-up animation-delay-450">
      <label class="block text-gray-400 text-sm font-light mb-2"
        >Password</label
      >
      <div class="relative">
        <i
          class="fas fa-lock absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-500"
        ></i>
        <input
          type="password"
          name="password"
          class="input-field w-full pl-12 pr-4 py-3 rounded-xl text-white border border-gray-800 focus:outline-none focus:ring-1 focus:ring-indigo-500/50"
          placeholder="••••••••"
        />
        <i
          class="fas fa-eye-slash absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-500 cursor-pointer hover:text-gray-300"
        ></i>
      </div>
    </div>

    <!-- Gender and Date of Birth -->
    <div class="grid grid-cols-2 gap-4 animate-slide-up animation-delay-600">
      <div>
        <label class="block text-gray-400 text-sm font-light mb-2"
          >Gender</label
        >
        <div class="relative">
          <i
            class="fas fa-venus-mars absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-500"
          ></i>
          <select
            name="gender"
            class="input-field w-full pl-12 pr-4 py-3 rounded-xl text-white border border-gray-800 focus:outline-none focus:ring-1 focus:ring-indigo-500/50 appearance-none"
          >
            <option value="" disabled selected>Select</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
          </select>
          <i
            class="fas fa-chevron-down absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-500 pointer-events-none"
          ></i>
        </div>
      </div>
      <div>
        <label class="block text-gray-400 text-sm font-light mb-2"
          >Date of Birth</label
        >
        <div class="relative">
          <i
            class="fas fa-calendar-day absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-500"
          ></i>
          <input
            type="date"
            name="dateOfBirth"
            class="input-field w-full pl-12 pr-4 py-3 rounded-xl text-white border border-gray-800 focus:outline-none focus:ring-1 focus:ring-indigo-500/50 [&::-webkit-calendar-picker-indicator]:opacity-0"
          />
        </div>
      </div>
    </div>

    <!-- Terms and Submit -->
    <div class="animate-slide-up animation-delay-750">
      <div class="flex items-center">
        <input
          type="checkbox"
          class="checkbox checkbox-xs bg-gray-800 border-gray-700 rounded"
          id="terms"
        />
        <label for="terms" class="ml-2 text-sm text-gray-400"
          >I agree to the
          <a href="#" class="text-indigo-400 hover:text-indigo-300 transition"
            >Terms and Conditions</a
          ></label
        >
      </div>
    </div>

    <button
      type="submit"
      class="login-btn w-full py-3 rounded-xl text-white font-medium text-lg animate-slide-up animation-delay-900"
    >
      Create Account
    </button>

    <p
      class="text-center text-gray-500 text-sm mt-6 animate-slide-up animation-delay-1050"
    >
      Already have an account?
      <a
        href="/api/v1/auth/login"
        class="text-indigo-400 hover:text-indigo-300 transition"
        >Sign in</a
      >
    </p>
  </form>
</div>
